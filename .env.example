# Project Chimera - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Keys
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chimera
POSTGRES_USER=chimera
POSTGRES_PASSWORD=changeme

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# =============================================================================
# Blockchain & Wallet (Coinbase AgentKit)
# =============================================================================
CDP_API_KEY_NAME=your_coinbase_api_key_name
CDP_API_KEY_PRIVATE_KEY=your_coinbase_private_key
WALLET_SEED_PHRASE=your_wallet_seed_phrase_here

# =============================================================================
# Social Media APIs
# =============================================================================
# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# =============================================================================
# MCP Configuration
# =============================================================================
MCP_SERVER_TWITTER_URL=http://localhost:3000
MCP_SERVER_WEAVIATE_URL=stdio
MCP_SERVER_COINBASE_URL=stdio

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=generate_a_secure_random_key_here

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_HITL=true
ENABLE_FINANCIAL_TRANSACTIONS=false  # Disable in dev for safety
ENABLE_OPENCLAW_INTEGRATION=false  # Phase 2 feature

# =============================================================================
# Budget & Safety Limits
# =============================================================================
MAX_DAILY_SPEND_PER_AGENT_USD=50
FINANCIAL_TRANSACTION_APPROVAL_THRESHOLD_USD=50
MIN_WALLET_BALANCE_ALERT_USD=10

# =============================================================================
# MCP Sense (Telemetry)
# =============================================================================
# Note: Configure MCP Sense in your IDE (VS Code/Cursor)
# This is tracked separately from environment variables
TENX_MCP_SENSE_ENABLED=true
